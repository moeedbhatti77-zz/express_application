extends layout

block content
  .row 
    .col-sm-8 
      br
      h1 Faculty
    .col-sm-4.float-right
      br
      a(href="/add", class="btn btn-primary mx-auto" ) Add New Faculty
  br
  table.table.table-bordered.table-hover
    thead
      tr
        th Name 
        th Email
        th Address 
        th Age
        th Phone
        th Actions
    tbody 
      each faculty in faculties 
        tr 
          td=faculty.name 
          td=faculty.email
          td=faculty.address.country+' '+faculty.address.city+' Street # '+faculty.address.street
          td=faculty.age
          td=faculty.phone[0]
          td.mx-auto
            a(href="/delete/"+faculty._id,class="btn btn-danger") Delete
            a(href="/edit/"+faculty._id,class="btn btn-info ") Edit
