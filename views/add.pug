extends layout 

block content
    h1 Add Record
    br
    <form action="/add" method="POST" >
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="title" name="name" placeholder="Enter Name">
        </div>
        br
        <div class="form-group">
            <label for="gender">Gender</label>
            <input type="text" class="form-control" id="gender" name="gender" placeholder="Gender">
        </div>
        br
        <div class="form-group">
            <label for="course_code">Course Code</label>
            <input type="text" class="form-control" id="course_code" name="course_code" placeholder="Enter Course Code">
        </div>
        br
        <div class="form-group">
            <label for="age">Age</label>
            <input type="number" class="form-control" id="age" name="age" placeholder="Enetr Age">
        </div>
        br
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enetr Email">
        </div>
        br
        <div class="form-group phone" >
            <label for="phone">Phone</label>
            <input type="number" class="form-control" name="phone[]" placeholder="Phone">
        </div>
        button.btn.btn-info#add_phone(type='button') Add Phone
        br
        label Address
        <div class="form-group">
            <input type="text" class="form-control" id="country" name="country" placeholder="Country">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="city" name="city" placeholder="City">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="street" name="street" placeholder="Street">
        </div>
        br
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>