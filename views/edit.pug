extends layout 

block content 
    h1 Update Record
    br
    <form action=/edit/#{faculty._id}  method="POST" >
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="title" name="name" placeholder="Enter Name" value=#{faculty.name}>
        </div>
        br
        <div class="form-group">
            <label for="gender">Gender</label>
            <input type="text" class="form-control" id="gender" name="gender" placeholder="Gender" value=#{faculty.gender}>
        </div>
        br
        <div class="form-group">
            <label for="course_code">Course Code</label>
            <input type="text" class="form-control" id="course_code" name="course_code" placeholder="Enter Course Code" value=#{faculty.course_code}>
        </div>
        br
        <div class="form-group">
            <label for="age">Age</label>
            <input type="number" class="form-control" id="age" name="age" placeholder="Enetr Age" value=#{faculty.age}>
        </div>
        br
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enetr Email" value=#{faculty.email}>
        </div>
        br
        <div class="form-group phone">
            <label for="phone">Phone</label>
            each phone in faculty.phone
                <input type="number" class="form-control" id="phone" name="phone[]" placeholder="Phone" value=#{phone}>
        </div>
        br
        button.btn.btn-info#add_phone(type='button') Add Phone
        br
        div 
            <div class="form-group">
                <label for="phone">Address</label>
                <input type="text" class="form-control" id="country" name="country" placeholder="Country"  value=#{faculty.address.country}>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="country" name="city" placeholder="City" value=#{faculty.address.city}>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="country" name="street" placeholder="Street" value=#{faculty.address.street}>
            </div>
        br
        <button type="submit" class="btn btn-primary">Update</button>
    </form>