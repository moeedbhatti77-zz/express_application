extends layout 

block content 
    h1 Update Record
    br
    <form action=/edit/#{faculty._id}  method="POST" >
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="title" name="name" placeholder="Enter Name" value=#{faculty.name}>
        </div>
        br
        <div class="form-group">
            <label for="age">Age</label>
            <input type="number" class="form-control" id="age" name="age" placeholder="Enetr Age" value=#{faculty.age}>
        </div>
        br
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enetr Email" value=#{faculty.email}>
        </div>
        br
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="number" class="form-control" id="phone" name="phone" placeholder="Phone" value=#{faculty.phone[0]}>
        </div>
        br
        div 
            <div class="form-group">
                <label for="phone">Address</label>
                <input type="text" class="form-control" id="country" name="country" placeholder="Country" >
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="country" name="city" placeholder="City">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="country" name="street" placeholder="Street">
            </div>
        br
        <button type="submit" class="btn btn-primary">Update</button>
    </form>